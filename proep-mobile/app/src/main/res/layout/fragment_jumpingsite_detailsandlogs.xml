<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.JumpingSiteLogsFragment"
    android:background="@color/Pale_Blue_Lily" >


    <LinearLayout
        android:id="@+id/LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/xml_imageView"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:srcCompat="@android:drawable/ic_menu_report_image" />

        <TextView
            android:id="@+id/textViewj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jumping site details:"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:textSize="18dp"
            android:textColor="@color/Black"
            android:textStyle="bold"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:padding="5dp"
            android:background="@color/Peach">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/xml_JumpingSiteName"
                    android:layout_width="119dp"
                    android:layout_height="wrap_content"
                    android:text="Name:"
                    android:textColor="@android:color/black"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/xml_JumpingSiteNameValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="...."
                    android:textColor="@android:color/black"
                    android:textSize="14dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/xml_JumpingSiteDifficultyLevel"
                    android:layout_width="179dp"
                    android:layout_height="wrap_content"
                    android:text="Difficulty Level:"
                    android:textColor="@android:color/black"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/xml_JumpingSiteDifficultyLevelValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="...."
                    android:textColor="@android:color/black"
                    android:textSize="14dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/xml_JumpingSiteHeight"
                    android:layout_width="119dp"
                    android:layout_height="wrap_content"
                    android:text="Height:"
                    android:textColor="@android:color/black"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/xml_JumpingSiteHeightValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="...."
                    android:textColor="@android:color/black"
                    android:textSize="14dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/xml_JumpingSiteRate"
                    android:layout_width="119dp"
                    android:layout_height="wrap_content"
                    android:text="Rate:"
                    android:textColor="@android:color/black"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/xml_JumpingSiteRateValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="...."
                    android:textColor="@android:color/black"
                    android:textSize="14dp" />

            </TableRow>

        </TableLayout>

        <Button
            android:id="@+id/xml_buttonAddNewLog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Add new log"
            android:layout_gravity="right"

            />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logs:"
            android:layout_marginLeft="5dp"
            android:textSize="18dp"
            android:textColor="@color/Black"
            android:textStyle="bold"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/xml_jumpingSiteLogsRV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:padding="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/LinearLayout"
            android:background="@color/White"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>